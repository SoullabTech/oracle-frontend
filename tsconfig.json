{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["vitest/globals"],
    "baseUrl": "./src",  // Add this line
    "paths": {
      "@/*": ["src/*"]  // Add this line to define the @ alias
    }
  },
  "include": [
    "src/**/*.ts",
    "src/components/tailwind.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
